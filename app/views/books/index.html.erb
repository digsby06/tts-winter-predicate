<br>
<h1>February Featured Books</h1>
<br>
<br>
<div class="row">
<% @books.each do |book| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="<%= book.image %>">
      <div class="caption">
        <h3><%= book.book_name %></h3>
        <h3>Cost: $<%= book.price %></h3>
        <%= link_to "More Info", book, class: "btn btn-default" %>
      </div>
    </div>
  </div>
  <% end %>
</div>

<br>

<%= link_to 'New Book', new_book_path, class: "btn btn-primary" %>
